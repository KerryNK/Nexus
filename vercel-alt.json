{
  "version": 2,
  "buildCommand": "npm install --prefix backend",
  "devCommand": "cd backend && node server.js",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/health",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/Nexus-Pro.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
