# ==================== API KEYS ====================
# At least one of these is required for data fetching
TAO_APP_API_KEY=your_key_here
TAOSTATS_API_KEY=your_key_here

# ==================== DATABASE ====================
# Use local MongoDB or MongoDB Atlas (cloud)
# Local: mongodb://localhost:27017/deai-nexus
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/deai-nexus
MONGODB_URI=mongodb://localhost:27017/deai-nexus

# ==================== SECURITY ====================
# IMPORTANT: Generate new secrets for production!
# Generate with: openssl rand -base64 64
JWT_SECRET=generate-a-long-random-string-here-min-32-chars
SESSION_SECRET=generate-another-long-random-string-here-min-32-chars
JWT_EXPIRE=7d

# ==================== ADMIN CREDENTIALS ====================
# Default admin user created during database initialization
# IMPORTANT: Change password after first login!
ADMIN_EMAIL=admin@deai.com
ADMIN_PASSWORD=admin123

# ==================== SERVER ====================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# ==================== OPTIONAL ====================
# For production use
LOG_LEVEL=info
API_RATE_LIMIT=100
